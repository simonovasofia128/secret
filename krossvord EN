      <div class="grid" id="crosswordGrid"></div>
    </div>
    <div class="clues">
      <h2>Across:</h2>
      <div class="clue"><span class="clue-number">1.</span> Main Christmas character in red suit with a sack</div>
      <div class="clue"><span class="clue-number">4.</span> Fun party items that go "pop!"</div>
      <div class="clue"><span class="clue-number">6.</span> Season of joy, gifts, and celebrations</div>
      <div class="clue"><span class="clue-number">8.</span> Evergreen decorated with lights and ornaments</div>
      <div class="clue"><span class="clue-number">9.</span> White winter precipitation</div>
      <div class="clue"><span class="clue-number">11.</span> Colorful explosions in the sky at midnight</div>
      <div class="clue"><span class="clue-number">13.</span> Frosty figure built from snow</div>

      <h2>Down:</h2>
      <div class="clue"><span class="clue-number">1.</span> Final seconds before the New Year (e.g., "10, 9, 8...")</div>
      <div class="clue"><span class="clue-number">2.</span> String of lights or decorative chain for the tree</div>
      <div class="clue"><span class="clue-number">3.</span> Presents placed under the tree</div>
    </div>
  </div>

  <script>
    // Create empty 15x15 grid
    const size = 15;
    let grid = Array(size).fill(null).map(() => Array(size).fill(null));
    let numbers = Array(size).fill(null).map(() => Array(size).fill(null));
    let clueNum = 1;

    // Helper to place word
    function placeWord(word, x, y, dir) {
      const cells = [];
      for (let i = 0; i < word.length; i++) {
        const cx = x + (dir === 'h' ? i : 0);
        const cy = y + (dir === 'v' ? i : 0);
        if (cx < size && cy < size) {
          if (grid[cy][cx] === null || grid[cy][cx] === word[i]) {
            grid[cy][cx] = word[i];
            cells.push({ x: cx, y: cy });
          }
        }
      }
      if (cells.length > 0 && numbers[cells[0].y][cells[0].x] === null) {
        numbers[cells[0].y][cells[0].x] = clueNum++;
      }
    }

    // Place words (all uppercase, no spaces)
    // Across
    placeWord("SANTA", 0, 0, "h");
    placeWord("POPPERS", 3, 3, "h");
    placeWord("HOLIDAY", 1, 5, "h");
    placeWord("TREE", 6, 7, "h");
    placeWord("SNOW", 2, 9, "h");
    placeWord("FIREWORKS", 5, 11, "h");
    placeWord("SNOWMAN", 0, 13, "h");

    // Down
    placeWord("COUNTDOWN", 0, 0, "v"); // intersects with SANTA at 'S'
    placeWord("GARLAND", 2, 0, "v");
    placeWord("GIFTS", 4, 0, "v");

    // Render grid
    const gridEl = document.getElementById("crosswordGrid");
    for (let y = 0; y < size; y++) {
      for (let x = 0; x < size; x++) {
        const cell = document.createElement("div");
        cell.className = "cell";
        if (grid[y][x] === null) {
          cell.classList.add("black");
        } else {
          cell.textContent = grid[y][x];
          if (numbers[y][x] !== null) {
            const numSpan = document.createElement("span");
            numSpan.className = "number";
            numSpan.textContent = numbers[y][x];
            cell.appendChild(numSpan);
          }
        }
        gridEl.appendChild(cell);
      }
    }
  </script>
