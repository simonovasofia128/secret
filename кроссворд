  <script>
    // –°–ª–æ–≤–∞ –∏ –∏—Ö –ø–æ–∑–∏—Ü–∏–∏ –≤ —Å–µ—Ç–∫–µ (–±–µ–∑ –ø—Ä–æ–±–µ–ª–æ–≤)
    const words = {
      // –ì–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω—ã–µ
      1: { word: "–î–ï–î–ú–û–†–û–ó", x: 0, y: 0, dir: "h", clue: "–ì–ª–∞–≤–Ω—ã–π –Ω–æ–≤–æ–≥–æ–¥–Ω–∏–π –ø–µ—Ä—Å–æ–Ω–∞–∂ —Å –ø–æ—Å–æ—Ö–æ–º –∏ –º–µ—à–∫–æ–º" },
      4: { word: "–•–õ–û–ü–£–®–ö–ò", x: 3, y: 3, dir: "h", clue: "–í–µ—Å—ë–ª–∞—è –¥–µ—Ç—Å–∫–∞—è \"—Å—Ç—Ä–µ–ª—è–ª–∫–∞\", —Å–æ–∑–¥–∞—é—â–∞—è —Ö–ª–æ–ø–æ–∫" },
      6: { word: "–ü–†–ê–ó–î–ù–ò–ö", x: 1, y: 5, dir: "h", clue: "–¢–æ—Ä–∂–µ—Å—Ç–≤–µ–Ω–Ω–æ–µ —Å–æ–±—ã—Ç–∏–µ, –æ—Ç–º–µ—á–∞–µ–º–æ–µ —Å —ë–ª–∫–æ–π –∏ –ø–æ–¥–∞—Ä–∫–∞–º–∏" },
      8: { word: "–ï–õ–ö–ê", x: 6, y: 7, dir: "h", clue: "–ù–æ–≤–æ–≥–æ–¥–Ω–µ–µ –¥–µ—Ä–µ–≤–æ —Å –∏–≥—Ä—É—à–∫–∞–º–∏" },
      9: { word: "–°–ù–ï–ì", x: 2, y: 9, dir: "h", clue: "–¢–æ, —á—Ç–æ –ø–∞–¥–∞–µ—Ç –∑–∏–º–æ–π –∏ –∏–∑ —á–µ–≥–æ –ª–µ–ø—è—Ç —Å–Ω–µ–≥–æ–≤–∏–∫–æ–≤" },
      11: { word: "–°–ê–õ–Æ–¢", x: 5, y: 11, dir: "h", clue: "–í–∑—Ä—ã–≤–Ω—ã–µ –æ–≥–Ω–µ–Ω–Ω—ã–µ —à–æ—É –≤ –Ω–µ–±–µ –≤ –ø–æ–ª–Ω–æ—á—å" },
      13: { word: "–°–ù–ï–ì–£–†–û–ß–ö–ê", x: 0, y: 13, dir: "h", clue: "–í–æ–ª—à–µ–±–Ω–∞—è –ø–æ–º–æ—â–Ω–∏—Ü–∞ –î–µ–¥–∞ –ú–æ—Ä–æ–∑–∞" },

      // –í–µ—Ä—Ç–∏–∫–∞–ª—å–Ω—ã–µ
      1: { word: "–ë–û–ô–ö–£–†–ê–ù–¢–û–í", x: 0, y: 0, dir: "v", clue: "–ó–≤–æ–Ω —á–∞—Å–æ–≤ –≤ –ø–æ–ª–Ω–æ—á—å, –≤–æ–∑–≤–µ—â–∞—é—â–∏–π –ù–æ–≤—ã–π –≥–æ–¥" },
      2: { word: "–ì–ò–†–õ–Ø–ù–î–ê", x: 2, y: 0, dir: "v", clue: "–£–∫—Ä–∞—à–µ–Ω–∏–µ –¥–ª—è —ë–ª–∫–∏ –∏–ª–∏ –∫–æ–º–Ω–∞—Ç—ã –∏–∑ –ª–∞–º–ø–æ—á–µ–∫" },
      3: { word: "–ü–û–î–ê–†–ö–ò", x: 4, y: 0, dir: "v", clue: "–¢–æ, —á—Ç–æ –î–µ–¥ –ú–æ—Ä–æ–∑ –∫–ª–∞–¥—ë—Ç –ø–æ–¥ —ë–ª–∫—É" }
    };

    // –°–æ–∑–¥–∞—ë–º –ø—É—Å—Ç—É—é —Å–µ—Ç–∫—É 15x15
    const size = 15;
    let grid = Array(size).fill(null).map(() => Array(size).fill(null));
    let numbers = Array(size).fill(null).map(() => Array(size).fill(null));

    // –ù–æ–º–µ—Ä –¥–ª—è –ø–æ–¥—Å–∫–∞–∑–æ–∫
    let clueNum = 1;

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Ä–∞–∑–º–µ—â–µ–Ω–∏—è —Å–ª–æ–≤–∞ –≤ —Å–µ—Ç–∫–µ
    function placeWord(word, x, y, dir) {
      const cells = [];
      for (let i = 0; i < word.length; i++) {
        let cx = x + (dir === 'h' ? i : 0);
        let cy = y + (dir === 'v' ? i : 0);
        if (cx < size && cy < size) {
          if (grid[cy][cx] === null || grid[cy][cx] === word[i]) {
            grid[cy][cx] = word[i];
            cells.push({ x: cx, y: cy });
          } else {
            console.warn(`–ö–æ–Ω—Ñ–ª–∏–∫—Ç –Ω–∞ (${cx}, ${cy})`);
          }
        }
      }

      // –ü—Ä–∏—Å–≤–∞–∏–≤–∞–µ–º –Ω–æ–º–µ—Ä –ø–µ—Ä–≤–æ–π –∫–ª–µ—Ç–∫–µ —Å–ª–æ–≤–∞, –µ—Å–ª–∏ –µ—â—ë –Ω–µ –∑–∞–Ω—è—Ç
      if (cells.length > 0 && numbers[cells[0].y][cells[0].x] === null) {
        numbers[cells[0].y][cells[0].x] = clueNum++;
      }
    }

    // –†–∞–∑–º–µ—â–∞–µ–º —Å–ª–æ–≤–∞
    // –ì–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω—ã–µ
    placeWord("–î–ï–î–ú–û–†–û–ó", 0, 0, "h");
    placeWord("–•–õ–û–ü–£–®–ö–ò", 3, 3, "h");
    placeWord("–ü–†–ê–ó–î–ù–ò–ö", 1, 5, "h");
    placeWord("–ï–õ–ö–ê", 6, 7, "h");
    placeWord("–°–ù–ï–ì", 2, 9, "h");
    placeWord("–°–ê–õ–Æ–¢", 5, 11, "h");
    placeWord("–°–ù–ï–ì–£–†–û–ß–ö–ê", 0, 13, "h");

    // –í–µ—Ä—Ç–∏–∫–∞–ª—å–Ω—ã–µ
    placeWord("–ë–û–ô–ö–£–†–ê–ù–¢–û–í", 0, 0, "v"); // –ø–µ—Ä–µ—Å–µ–∫–∞–µ—Ç—Å—è —Å "–î–ï–î–ú–û–†–û–ó"
    placeWord("–ì–ò–†–õ–Ø–ù–î–ê", 2, 0, "v");
    placeWord("–ü–û–î–ê–†–ö–ò", 4, 0, "v");

    // –û—Ç–æ–±—Ä–∞–∂–∞–µ–º —Å–µ—Ç–∫—É
    const gridEl = document.getElementById("crosswordGrid");
    for (let y = 0; y < size; y++) {
      for (let x = 0; x < size; x++) {
        const cell = document.createElement("div");
        cell.className = "cell";
        if (grid[y][x] === null) {
          cell.classList.add("black");
        } else {
          cell.textContent = grid[y][x];
          if (numbers[y][x] !== null) {
            const numSpan = document.createElement("span");
            numSpan.className = "number";
            numSpan.textContent = numbers[y][x];
            cell.appendChild(numSpan);
          }
        }
        gridEl.appendChild(cell);
      }
    }
  </script>
